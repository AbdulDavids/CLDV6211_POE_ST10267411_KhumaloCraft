@model IEnumerable<CLDV6211_POE_ST10267411_KhumaloCraft.Models.Product>

@{
    ViewData["Title"] = "Products";
    var isAdmin = Context.Session.GetString("UserName") == "admin";
}

<h2>My Work</h2>

@if (isAdmin)
{
    <!-- Add New Product button -->
    <a asp-action="Create" class="btn btn-primary mb-3">Add New Product</a>
}

<!-- Cart button -->
<a asp-action="Index" asp-controller="Cart" class="btn btn-primary mb-3">View Cart</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
            @if (isAdmin)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <form asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@product.ProductID" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </td>
                @if (isAdmin)
                {
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="productId" value="@product.ProductID" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
